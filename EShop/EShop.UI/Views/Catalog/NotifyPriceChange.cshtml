@model EShop.UI.Models.PriceChangeRequest

@{
    ViewData["Title"] = "New Product";
}

<h1>Create New Product</h1>
<form asp-action="NotifyPriceChange" method="post" enctype="multipart/form-data">


    <div class="form-group">

     

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="@Model.ProductName"></label>
                   
                    <input class="form-control" type="text" asp-for="@Model.ProductName" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="@Model.Price"></label>
                    <div>
                        <span class="text-danger" asp-validation-for="@Model.Price"></span>
                    </div>
                    <input class="form-control" type="number" asp-for="@Model.Price" readonly/>
                </div>
            </div>
        </div>

      
        <div class="row">
            <div class="col-md-8">
                <label asp-for="@Model.NewPrice"></label>
                <div>
                    <span class="text-danger" asp-validation-for="@Model.NewPrice"></span>
                </div>
                <input class="form-control" type="number" asp-for="@Model.NewPrice" />
               
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label>Email</label>
                    <div>
                        <span class="text-danger" asp-validation-for="@Model.Email"></span>
                    </div>
                    <input class="form-control" type="email" asp-for="@Model.Email" />
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <button class="btn btn-success" type="submit">Submit</button>
                </div>
            </div>
        </div>

    </div>
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.ProductId)
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
